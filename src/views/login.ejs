<!DOCTYPE html>
<html>

<head>
    <%- include('./partials/head.ejs') %>
</head>

<body>
    <%- include('./partials/header.ejs') %>

    <div class="container">

        
        <form action="/users/login" method="post" class="text-center bg-info col-md-6 m-auto mt-3 p-1 rounded">
            <h1 class=" d-flex justify-content-center mt-3">Log in</h1>
            <div class="row d-flex justify-content-center p-5">
                <div class="row  d-flex justify-content-center">
                    <div class="col-md-8 text-left">
        
                        <label for="email" class="form-label">User email</label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email"
                            class="form-control" 
                            aria-describedby="passwordHelpBlock"
                            value="<%= locals.old && old.email ? old.email : '' %>"
                        >
                        <% if(locals.errors && errors.email){  %>
                            <div class="row">
                                <i class="col-md-12 text-danger">
                                    <%= errors.email.msg %>
                                </i>
                            </div>
                        <% } %>
                    </div>

                </div>

                <div class="row  d-flex justify-content-center mt-3">
                    <div class="col-md-8">
                        <label for="password" class="form-label">Password</label>
                        <input 
                            type="password" 
                            id="password" 
                            class="form-control" 
                            aria-describedby="passwordHelpBlock"
                            name="password"
                        >
                        <% if(locals.errors && errors.password){  %>
                            <div class="row">
                                <i class="col-md-12 text-danger">
                                    <%= errors.password.msg %>
                                </i>
                            </div>
                        <% } %>
                    </div>

                </div>

                <% if(locals.errorFind){  %>
                    <div class="row d-flex justify-content-center">
                        <i class="col m-auto">
                            <%= errorFind %>
                        </i>
                    </div>
                <% } %>

                <div class="row  d-flex justify-content-center mt-3">
                    <div class="col-md-8 d-flex justify-content-center">
                        <button class="btn btn-primary" type="submit">LogIn</button>
                    </div>

                </div>
            </div>
    
        </form>
    </div>



        <%- include('./partials/scripts.ejs') %>
</body>

</html>